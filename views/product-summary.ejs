    <span class="loop-product-categories">
        <a href="product-category.html" rel="tag"><%=result.category.parent %></a>
    </span><!-- .loop-product-categories -->

    <h1 itemprop="name" class="product_title entry-title"><%=result.title.product_title %></h1>

