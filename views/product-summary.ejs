    <div class="brand">
        <a href="product-category.html"><img src="../../images/brands/<%=result.category.child %>.jpg" alt=<%=result.category.child %> /></a>
    </div><!-- .brand -->

    <div itemprop="description">
        <ul>
            <li><%=result.specification.display_size %> Touch Screen </li>
            <li><%=result.specification.operating_system %> OS</li>
            <li><%=result.specification.processor_type %> Processor</li>
            <li><%=result.specification.primary_camera %> front and <%=result.specification.secondary_camera %> rear camera</li>
        </ul>

        <p><strong>Model Number</strong>: <%=result.specification.model_number %></p>

    </div>

    <div itemprop="offers">

        <p class="price">
         <% if(result.listprice.flipkart_listprice>0){ %>
            <span class="electro-price"><del><span class="amount">&#8377;<%=result.listprice.flipkart_listprice %></span></del> <ins><span class="amount">&#8377;<%=result.offerprice.flipkart_offerprice %></span></ins></span>
         <% }else if(result.listprice.amazon_listprice>0){ %>
            <span class="electro-price"><del><span class="amount">&#8377;<%=result.listprice.amazon_listprice %></span></del> <ins><span class="amount">&#8377;<%=result.offerprice.amazon_offerprice %></span></ins></span>
            <%  } %>
            <button type="submit" class="affiliatebutton" >Buy for Best Price</button>
        </p>

    </div>
    <div class="action-buttons">
        <a href="/electro/product/ultra-wireless-s50-headphones-s50-with-bluetooth/?add_to_wishlist=2439" rel="nofollow" class="add_to_wishlist" > Wishlist</a>
        <a href="/electro/product/ultra-wireless-s50-headphones-s50-with-bluetooth/?action=yith-woocompare-add-product&id=2439" class="add-to-compare-link" data-product_id="2439">Compare</a>
    </div>

</div>

